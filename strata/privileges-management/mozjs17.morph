name: mozjs17
kind: chunk
build-system: manual
pre-configure-commands:
#- cp /usr/share/automake*/config.guess . 
configure-commands:
- |
  cd js/src;
  ./configure --prefix="$PREFIX" \
              --sysconfdir=/etc \
              --with-system-nspr \
              --with-system-ffi \
              --enable-threadsafe
build-commands:
- |
  cd js/src;
  make
install-commands:
- cd js/src;
  make DESTDIR="$DESTDIR" install
