name: boot-image@jetson-tx1
kind: chunk
build-system: manual
build-commands:
- cp /boot/u-boot.bin .
- cp tegra210/nvidia/p2371-2180/* .
- cbootimage -gbct -t210 P2180_A00_LP4_DSC_204Mhz.bct.cfg tx1.bct
- sed -i 's/nvtboot.bin/u-boot.bin/' p2371-2180-emmc.img.cfg
- cbootimage -t210 p2371-2180-emmc.img.cfg tx1-emmc.img
- false
install-commands:
- install -m 755 tx1-emmc.img "$DESTDIR/boot/"
